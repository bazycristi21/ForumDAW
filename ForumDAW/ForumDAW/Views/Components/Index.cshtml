@model IEnumerable<ForumDAW.Models.Component>
@{
    ViewBag.Title = "Index";
}
<br />
<br />
<br />
<h2>Lista pieselor</h2>

<table class="table">
    <tr>
        <th>
            Nume componenta
        </th>
        <th>
            Specificatii
        </th>
    </tr>
    <br />
    <br />
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specifications)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Review-uri", "Cauta", new { id = item.Id })
                @if (User.IsInRole("Admin"))
                {
                    <span>|</span>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id });
                    <span>|</span>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id });
                }
            </td>
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Adauga o noua piesa", "Create", null, new { @class = "btn btn-primary" })
</p>

